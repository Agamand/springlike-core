{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "CommonJS",
    "lib": ["es2015", "es2016", "es2017"],
    "esModuleInterop": true,
    "target": "ES2017",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "lib",
    "baseUrl": ".",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "declarationDir": "types",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}